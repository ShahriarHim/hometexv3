# ==============================================
# HOMETEX BANGLADESH - ENVIRONMENT CONFIGURATION
# ==============================================

# Application Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Hometex Bangladesh

# ==============================================
# API CONFIGURATION
# ==============================================
# Set NEXT_PUBLIC_API_BASE_URL to your backend API URL
#
# For LOCAL development: Leave empty or set to local backend
# For STAGING: stage url
# For PRODUCTION: production URL
#
NEXT_PUBLIC_API_BASE_URL=

# Local Development API (used when NEXT_PUBLIC_USE_LOCAL_API=true)
NEXT_PUBLIC_API_LOCAL_URL=http://localhost:8000

# Force Local API Usage
# Set to "true" to use localhost:8000 (overrides NEXT_PUBLIC_API_BASE_URL)
# Set to "false" or leave empty to use NEXT_PUBLIC_API_BASE_URL
NEXT_PUBLIC_USE_LOCAL_API=false
# ==============================================
# ENVIRONMENT
PUSHER_APP_ID=
PUSHER_SECRET=YOUR_SECRET_KEY_HERE
NEXT_PUBLIC_PUSHER_KEY=
NEXT_PUBLIC_PUSHER_CLUSTER=

# ==============================================
# ENVIRONMENT
# ==============================================
# Options: development | production | test
NODE_ENV=development

# ==============================================
# OPTIONAL: ANALYTICS (Uncomment to enable)
# ==============================================
# NEXT_PUBLIC_GA_ID=
# NEXT_PUBLIC_GTM_ID=
# NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ==============================================
# OPTIONAL: FEATURE FLAGS
# ==============================================
# NEXT_PUBLIC_ENABLE_CHAT=true

# ==============================================
# AUTHENTICATION - NextAuth.js
# ==============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth
# Project ID: your_google_project_id
# Valid JavaScript Origins: http://localhost:3000, http://yourdomain.com, http://staging.yourdomain.com
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ==============================================
# PUSHER CONFIGURATION (Real-time Features)
# ==============================================
# Get these from https://dashboard.pusher.com
# Free tier: 100 concurrent connections, 200k messages/day
PUSHER_APP_ID=your_pusher_app_id_here
PUSHER_SECRET=your_pusher_secret_here
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key_here
NEXT_PUBLIC_PUSHER_CLUSTER=ap2
